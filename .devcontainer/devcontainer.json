{
	"name": "PGo",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"remoteUser": "ubuntu",
	"customizations": {
		"vscode": {
			"extensions": [
				"scalameta.metals",
				"github.vscode-github-actions",
				"scala-lang.scala",
				"golang.Go",
				"tlaplus.vscode-ide",
				"ms-azuretools.vscode-docker",
				"llvm-vs-code-extensions.vscode-clangd"
			]
		}
	},
	"postCreateCommand": {
		// "setup_sc": "rm -rf out/ .bloop/ .bsp/ .metals/ && ./mill mill.bsp/install"
	},
	"postStartCommand": {
		"autocomplete": "rm -rf out/ .bloop/ .bsp/ .metals/ && ./mill mill.bsp/install && ./mill mill.tabcomplete/install"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	}
}